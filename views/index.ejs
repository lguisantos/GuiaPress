<%- include('partials/Header.ejs') %>
<%- include('partials/HomeNavbar.ejs') %>

<body>
    <div class="container" style="margin-top: 15px;">

        <div class="jumbotron">
            <h1 class="display-4">Olá, Dev!</h1>
            <p class="lead">Este é um simples Blog de informações</p>
            <hr class="my-4">
            <p>Vamos aproveitar todo o conteúdo</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </div>

        <% articles.forEach(article => { %>
        <div class="card" style="margin-bottom: 15px;">
            <div class="card-header">
                <%= article.title %>
            </div>
            <div class="card-body">
                <!-- <%- article.body %> -->
             <a href="/<%= article.slug %>" class="btn btn-success" style="display: block; margin-top: 15px;">Ler artigo</a>
            </div>
        </div>
        <% }); %>
    </div>
</body>
<%- include('partials/Footer.ejs')%>