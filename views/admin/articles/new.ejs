<!DOCTYPE html>
<html>
<%-include('../../partials/Header')%>
<%-include('../../partials/Navbar')%>

<div class="container">
    <hr>

    <div class="card">

        <div class="card-header">
            <h2>Create a new Article</h2>
        </div>
        <div class="card-body">
            <!-- Method used to the form and address -->
            <form method="POST" action="/article/save">
                <input class="form-control" type="text" name="title" placeholder="Insert the category name:"
                    style="margin-bottom: 10px;">

                <textarea class="form-control" name="body" cols="30" rows="10" placeholder="Write down here!"
                    style="margin-bottom: 10px;" id="textEditor">
                </textarea>

                <input type="hidden" name="body" id="body">

                <label for="categories">Categories</label>
                <select name="categories" class="form-control" id="" style="margin-bottom: 10px;">
                    <% categories.forEach(element => { %>
                    <option value="<%= element.id %> ">
                        <%= element.title %>
                    </option>
                    <% }); %>
                </select>
                <button class="btn btn-success" onclick="">Submit</button>
            </form>
        </div>
    </div>
</div>
<%-include('../../partials/Footer')%>

<!-- Resolver deipois -->
<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: "#textEditor",
        plugins:`advlist
                 autolink 
                 link 
                 image 
                 lists 
                 print 
                 preview 
                 hr 
                 searchreplace 
                 wordcount 
                 fullscreen
                 insertdatetime
                 media
                 save
                 table
                 paste
                 emoticons`
    })
</script>

</html>